<p id="notice"><%= notice %></p>

<h1>Rides</h1>
<%= form_with url: "/rides", method: :get, local: true do |f| %>
    <%= f.label :출발지 %>
    <%= f.text_field :departure %>
    <%= f.label :도착지 %>
    <%= f.text_field :arrival %>
    <%= f.label :출발일 %>
    <%= f.date_field :start_date %>
    <%= f.submit "검색" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Reservation</th>
      <th>Min</th>
      <th>Memo</th>
      <th>Via</th>
      <th>Samesex</th>
      <th>Left</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.user_id %></td>
        <td><%= ride.departure %></td>
        <td><%= ride.arrival %></td>
        <td><%= ride.reservation %></td>
        <td><%= ride.min %></td>
        <td><%= ride.memo %></td>
        <td><%= ride.via %></td>
        <td><%= ride.samesex %></td>
        <td><%= ride.left %></td>
        <td><%= ride.end %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path %>
